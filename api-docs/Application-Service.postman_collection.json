{
    "info": {
        "_postman_id": "application-service-collection-2025",
        "name": "2. WorkFitAI - Application Service",
        "description": "Job Application Management with CV Upload & Status Tracking\n\nBase URL: {{base_url}}/application\nPort: 9084 -> 9085 (gateway)\nConsul: application\nDB: MongoDB + MinIO\nEvents: Kafka\n\nStatus Flow: APPLIED -> REVIEWING -> INTERVIEW -> OFFER -> HIRED (or REJECTED)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Candidate Operations",
            "item": [
                {
                    "name": "Create Application (with CV upload)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200 || pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.success && response.data && response.data.id) {",
                                    "        pm.environment.set('applicationId', response.data.id);",
                                    "        console.log('Application created: ' + response.data.id);",
                                    "        console.log('Status: ' + response.data.status);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{candidateAccessToken}}"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "jobId",
                                    "value": "{{jobId}}",
                                    "type": "text"
                                },
                                {
                                    "key": "coverLetter",
                                    "value": "I am excited to apply for this position...",
                                    "type": "text"
                                },
                                {
                                    "key": "cvFile",
                                    "type": "file",
                                    "src": "{{cvFilePath}}"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/application",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "application"
                            ]
                        }
                    }
                },
