            "name": "ðŸ“‹ Candidate Operations",
            "description": "Endpoints for job seekers to manage their applications",
            "item": [
                {
                    "name": "Create Application",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{candidateAccessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"jobId\": \"{{jobId}}\",\n    \"cvId\": \"{{cvId}}\",\n    \"note\": \"I am excited about this opportunity and believe my skills align well with the requirements.\"\n}"
                        },
                        "url": {
                            "raw": "{{service_base}}",
                            "host": [
                                "{{service_base}}"
                            ]
                        },
                        "description": "Submit a new job application.\n\n**Permission**: `application:create`\n\n**Publishes**: `APPLICATION_CREATED` event to Kafka\n\n**Note**: Username is extracted from JWT `sub` claim - no need to send in request body."
                    },
                    "response": [],
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.data && response.data.id) {",
                                    "        pm.environment.set('applicationId', response.data.id);",
                                    "    }",
                                    "}",
                                    "",
                                    "pm.test('Application created (201)', function() {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "pm.test('Status is APPLIED', function() {",
                                    "    pm.expect(pm.response.json().data.status).to.eql('APPLIED');",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                },
