                                    "key": "query",
                                    "value": "error",
                                    "description": "Free text search"
                                },
                                {
                                    "key": "service",
                                    "value": "user-service",
                                    "description": "Service name filter"
                                },
                                {
                                    "key": "levels",
                                    "value": "ERROR,WARN",
                                    "description": "Log levels (comma-separated)"
                                },
                                {
                                    "key": "from",
